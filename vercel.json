{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["bot.py", "requirements.txt"]
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "requirements.txt",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/telegram_webhook_bot",
      "dest": "bot.py"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
